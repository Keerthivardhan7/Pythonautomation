import time

from selenium import webdriver
from selenium.webdriver.chrome.service import Service
from selenium.webdriver.common.by import *
from selenium.webdriver.support.select import Select

# chrome driver service selenium

driver = webdriver.Chrome()
driver.get("https://rahulshettyacademy.com/angularpractice/")
driver.maximize_window()

# locators  -- ID, Xpath, CSS selector, Classname, name,

# xpath= //tagname[@attribute='Value']
# CSS locators = tagename[attribute='Value']

## css locators using id --- #id
#css locators using classname -- .classname

driver.find_element(By.NAME, "email").send_keys("itreekvardhan7@gmail.com")
driver.find_element(By.ID, "exampleInputPassword1").send_keys("Itreek&007")
driver.find_element(By.ID, "exampleCheck1").click()


# CSS locators tagname[attribute='Value']

driver.find_element(By.CSS_SELECTOR, "input[name='name']").send_keys("Keerthi Vardhan")

#CSS locators if its id directly use #id like below
# CSS locators if its classname directly use .classname

driver.find_element(By.CSS_SELECTOR, "#inlineRadio1").click()

## static dropdown

Dropdown = Select(driver.find_element(By.ID, "exampleFormControlSelect1"))
Dropdown.select_by_visible_text("Female")
time.sleep(1)
Dropdown.select_by_index(0)





# Dropdown.select_by_value

# standard syntax of xpath   ## //tagname[@attribute="Value"]

driver.find_element(By.XPATH, "//input[@type='submit']").click()
message=driver.find_element(By.CLASS_NAME, "alert-success").text
print(message)
assert "Success" in message
driver.find_element(By.XPATH, "(//input[@type='text'])[3]").send_keys("Keerthi hello again")
driver.find_element(By.XPATH, "(//input[@type='text'])[3]").clear()

###  tagname[attribute = 'value'] -->   CSS locators

# driver.find_element(By.CSS_SELECTOR, "input[name='name']").send_keys("Keerthi Vardhan")

time.sleep(5)
